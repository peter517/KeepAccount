<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/rlAccountRange"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            style="@style/ArTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accountRange" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/text_heigth"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/etStartAccount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/text_selector_xml"
                android:numeric="decimal" />

            <ImageView
                android:layout_width="@dimen/bar_img_width"
                android:layout_height="fill_parent"
                android:src="@drawable/arrow_right" />

            <EditText
                android:id="@+id/etEndAccount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/text_selector_xml"
                android:numeric="decimal" />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/rlArType"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/text_heigth"
        android:layout_below="@+id/rlAccountRange"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/ArTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/type" >
        </TextView>

        <Spinner
            android:id="@+id/spArTypeName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_selector_xml" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlStartDate"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/text_heigth"
        android:layout_below="@+id/rlArType"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btStartDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_xml"
            android:text="@string/startDate" >
        </Button>

        <Button
            android:id="@+id/btEndDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_xml"
            android:text="@string/endDate" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlEndDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlStartDate"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/ArTextStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/tvStartDate" >
        </TextView>

        <TextView
            style="@style/ArTextStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/tvEndDate"  >
        </TextView>
    </LinearLayout>

    <Button
        android:id="@+id/btStartSearch"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@+id/rlEndDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_selector_xml"
        android:text="@string/startSearchAr" >
    </Button>

</RelativeLayout>