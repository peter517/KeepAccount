<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pengjun.ka"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name="com.pengjun.ka.activity.KaApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/KATheme" >
        <activity
            android:name="com.pengjun.ka.activity.KaMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pengjun.ka.activity.AddArActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pengjun.ka.activity.ManageArTypeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pengjun.ka.activity.ArSearchResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pengjun.ka.activity.ArChartActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.pengjun.ka.activity.ArChartDisplayActivity"
            android:screenOrientation="landscape" />
        <activity android:name="org.achartengine.GraphicalActivity" 
            android:screenOrientation="landscape"/>
        <activity
            android:name="com.pengjun.ka.activity.ArBackupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pengjun.ka.activity.AddArTypeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name="com.pengjun.ka.activity.LoadingActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- android:windowSoftInputMode="stateVisible|adjustPan" -->
    </application>

</manifest>